<!-- Page content -->
<div class="main">
<%= render 'home/partials/nav'%>
    <!-- Devise notification styled with bootstrap -->
<% if notice %>
<div class="notice alert alert-success alert-dismissible fade show"
role="alert">
<%= notice %>
<button type="button" class="close" data-dismiss="alert" aria-
label="Close">
<span aria-hidden="true">&times;</span>
</button>
</div>
<% elsif alert %>
<div class="danger alert alert-danger alert-dismissible fade show"
role="alert">
<p><%= alert %></p>
<button type="button" class="close" data-dismiss="alert" aria-
label="Close">
<span aria-hidden="true">&times;</span>
</button>
</div>
<% end %>


<div class="wrapper1" style="min-height: 600px;">



<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h5>Home</h5>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Layouts</a></li>
              <li class="breadcrumb-item active">Home</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
<section class="content">

      <div class="container-fluid">

       
      


        <div class="row">
          <div class="col-12">
            <!-- Default box -->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Cards</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i></button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i></button>
                </div>
              </div>
              <div class="card-body">
               
						              <!-- /.card-content -->

						 <table class="table table-hover">

						        <thead>
						          <tr>
						            <th style="width:20px;">
						            </th>
						            <th>Title</th>
						            <th>Price</th>
						            <th colspan="3"></th>
						            
						          </tr>
						        </thead>
						        <tbody>


								<% @order_items.each do |item| %>
								<tr>

								    <td><label class="ui-check m-0"><input type="checkbox" name="post[]" class="has-value"><i class="dark-white"></i></label></td>
							        <td><%= item.product.title %></td>
							        <td><%= item.product.price %></td>
							        <td> 

								    <%= form_for item, remote: true do |f| %>



								        <%= f.hidden_field :product_id, :value => item.product.id %>
								        <%= f.number_field :quantity, :value => item.quantity.to_i %>
								        <%= f.submit "Update Item "%>

								        <%= link_to "Remove Items", order_item_path(item), method: :delete, remote: true%>

								    <% end %>
								    </td>
								    <td>
						    <p>Subtotal: <%= item.total %></p>
						        	</td>

								</tr>



						<% end %>
						</tbody>
						</table>


						
						<h5><i class="nav-icon fas fa-shopping-cart"></i> Your current card value has a subtotal of: <%= current_order.subtotal %></h5>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <div class="p-2 text-xs">
                  <div class="pull-right text-muted py-1">
                    Â© Copyright <strong>Driversnote</strong> <span class="hidden-xs-down">- Built with care!!</span>
                    <a ui-scroll-to="content"><i class="fa fa-long-arrow-up p-x-sm"></i></a>
                  </div>
          
                </div>
              </div>
              <!-- /.card-footer-->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
    </section>
</div> 



</div>
